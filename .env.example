# Environment Variables Template
# Copy this to .env.dev for development or .env.prod for production

# MySQL Root Password
MYSQL_ROOT_PASSWORD=your-root-password-here

# Database Configuration
MYSQL_DATABASE=coaches_db
MYSQL_USER=coaches_user
MYSQL_PASSWORD=your-database-password-here

# Backend Database Connection (should match MYSQL_ values above)
DB_HOST=mysql
DB_USER=coaches_user
DB_PASSWORD=your-database-password-here
DB_NAME=coaches_db

# Frontend API Configuration (point to backend server)
# Backend Port 
# the ports should match
PORT=3000
VUE_APP_API_URL=http://localhost:3000

# JWT Secret - MUST be a strong random string in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production
